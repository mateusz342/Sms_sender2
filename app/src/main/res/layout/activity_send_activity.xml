<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="pl.edu.wat.sms_sender2.MainActivity"
    android:background="@color/common_google_signin_btn_text_light_focused">


    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:ems="10"
        android:layout_weight="1"
        android:hint="Enter contact number"
        android:id="@+id/tvNumber"
        android:singleLine="true"
        android:background="@android:drawable/editbox_background"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:ems="10"
        android:layout_weight="1"
        android:hint="Enter receiver's public key"
        android:id="@+id/publickey"
        android:singleLine="true"
        android:background="@android:drawable/editbox_background"
        android:layout_below="@+id/tvNumber"
        android:layout_alignParentStart="true" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="300dp"
        android:id="@+id/messages"
        android:background="#cdeede"

        android:layout_below="@+id/publickey"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Send encrypted message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/send"
        android:onClick="onSendClick"
        android:layout_below="@+id/input"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Decrypt recieve message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/normal"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/decrypt" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:id="@+id/input"
        android:background="#d0d3ee"
        android:gravity="top"
        android:hint="Enter message here..."
        android:layout_below="@+id/messages"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Send normal message"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/normal"
        android:onClick="onSendClick1"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/send" />


</RelativeLayout>